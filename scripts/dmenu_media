#/bin/sh

x="$(echo -e "kvf\nradio" | dmenu)"
echo $x
if [ "$x" == 'kvf' ]; then
    # #xdotool key alt+b
    mpv 'https://play.kringvarp.fo/redirect/kvf/_definst_/720?type=m3u8'
    trap "xdotool key alt+b" INT
fi
if [ "$x" == 'radio' ]; then
    # #xdotool key alt+b
    alacritty --class radio -e pyradio
fi
